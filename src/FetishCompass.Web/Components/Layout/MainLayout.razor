@inherits LayoutComponentBase

<MudThemeProvider Theme="@_theme" @bind-IsDarkMode="@_isDark" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="2">
        <MudIconButton Icon="@(_isDark ? Icons.Material.Filled.DarkMode : Icons.Material.Filled.LightMode)"
                       OnClick="ToggleDark" />
        <MudText Typo="Typo.h6" Class="ml-2">Fetish Compass</MudText>
 </MudAppBar>
    <MudMainContent Class="pa-6">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool _isDark;
    private string? _search;
    private MudTheme _theme = new()
    {
        PaletteLight = new PaletteLight()
        {
            Primary   = "#6E56CF", // Twój fiolet
            Secondary = "#7C66DC",
            Info      = "#2E90FA",
            Success   = "#30A46C",
            Warning   = "#F5D90A",
            Error     = "#E5484D",
        },
        PaletteDark = new PaletteDark()
        {
            Primary   = "#8E7CFF",
            Secondary = "#A691FF",
        },
        LayoutProperties = new LayoutProperties { DefaultBorderRadius = "12px" }
    };

    private void ToggleDark()
    {
        _isDark = !_isDark;
        
        StateHasChanged();  
    }

}