@inherits LayoutComponentBase

<MudThemeProvider Theme="@theme" @bind-IsDarkMode="@isDark" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="2">
        <MudIconButton Icon="@(isDark ? Icons.Material.Filled.DarkMode : Icons.Material.Filled.LightMode)"
                       OnClick="this.ToggleDark" />
        <MudText Typo="Typo.h6" Class="ml-2">Fetish Compass</MudText>
 </MudAppBar>
    <MudMainContent Class="pa-6">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool isDark;

    private readonly MudTheme theme = new()
    {
        PaletteLight = new PaletteLight()
        {
            Primary   = "#6E56CF", // Twój fiolet
            Secondary = "#7C66DC",
            Info      = "#2E90FA",
            Success   = "#30A46C",
            Warning   = "#F5D90A",
            Error     = "#E5484D",
        },
        PaletteDark = new PaletteDark()
        {
            Primary   = "#8E7CFF",
            Secondary = "#A691FF",
        },
        LayoutProperties = new LayoutProperties { DefaultBorderRadius = "12px" }
    };

    private void ToggleDark()
    {
        isDark = !isDark;
        
        StateHasChanged();  
    }

}